<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center_vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:textColor="@color/day_white_primary"
        android:text="Melodi 1"
        android:background="@drawable/primary_button"
        android:id="@+id/pianoBeginnerMelody1"/>

    <Button
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:textColor="@color/day_white_primary"
        android:text="melodi 2"
        android:background="@drawable/primary_button"
        android:id="@+id/pianoBeginnerMelody2"/>


    <Button
        android:id="@+id/pianoBeginnerMelody3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/primary_button"
        android:text="melodi 3"
        android:textColor="@color/day_white_primary"
        android:textSize="24dp" />

    <Button
        android:id="@+id/pianoBeginnerMelody4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/primary_button"
        android:text="melodi 4"
        android:textColor="@color/day_white_primary"
        android:textSize="24dp" />
    <Button

        android:id="@+id/pianoBeginnerMelody5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/primary_button"
        android:text="melodi 5"
        android:textColor="@color/day_white_primary"
        android:textSize="24dp" />

</LinearLayout>